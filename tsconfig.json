{
	"compilerOptions": {
		"lib": ["es2020"],
		"declaration": true,
		"module": "CommonJS",
		"target": "es2017",
		"strict": true,

		"esModuleInterop": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"outDir": "./lib",

		"skipLibCheck": true
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
